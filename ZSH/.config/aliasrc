alias ls="ls -al --color"

alias cdstow="cd ~/dotfiles"
alias gstow="cd ~/dotfiles; stow --adopt -vt $HOME"
alias prevstow="cd ~/dotfiles; stow --adopt -nvt $HOME"

alias c=clear
alias x=exit
alias xa="killall kitty"
alias r="c;source ~/.zshrc"

alias vi="vim"
alias vim="nvim"
alias edit="nvim"
alias pacman="sudo pacman"

alias zshc="edit ~/.zshrc"
alias aliases="edit ~/.config/aliasrc"
alias bspcf="edit ~/.config/bspwm/bspwmrc"
alias sexy="edit ~/.config/sxhkd/sxhkdrc"
alias ktc="edit ~/.config/kitty/kitty.conf"
alias kttc="edit ~/.config/kitty/theme.conf"
alias pbc="edit ~/.config/polybar/config"
alias xin="edit ~/.xinitrc"
alias rofic="edit ~/.config/rofi/config"
alias dunstc="edit ~/.config/dunst/dunstrc"
alias piconf="edit .config/picom/picom.conf"

alias updateappimages="sudo mv $HOME/Downloads/*.AppImage /usr/bin/appimages"
alias minfetch="neofetch --config .config/neofetch/min.conf"
